%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag(url: '/login', layout: :default, label_col: "col-sm-2", control_col: "col-sm-4") do |f|
        %header
          %h1
            Sign in
        %fieldset
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
        %fieldset
          = f.submit "Sign in"
