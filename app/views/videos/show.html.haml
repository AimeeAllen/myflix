%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="#{@video.large_cover_url}")
      .video_info.col-sm-3
        %header
          %h3
            = @video.title
          %span
            = display_rating(@video)
        %p
          = @video.description

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for([@video, @review]) do |f|
        %fieldset
          .form-group
            .row
              .col-sm-3
                = f.select :rating, (1..5).to_a.reverse.map {|e| ["#{e} #{'Star'.pluralize(e)}",e]}, label: "Rate this video"
          .form-group
            .row
              .col-sm-8
                = f.text_area :comment, label: "Write Review", rows: 6
          = f.submit "Submit", class: "btn"
          &nbsp
          %a(href="") Cancel
      %header
        %h3
          = "User Reviews (#{@video.reviews.count})"
      %ul
        - @video.reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.fullname}</a>
              .col-sm-8
                %p= review.comment